---
import Layout from "../layouts/Layout.astro";
import { playlists } from "@/lib/data";
import PlayListItemCard from "@/components/PlayListItemCard.astro";
import PlayListHorizontalCard from "@/components/PlayListHorizontalCard.astro";
import Greeting from "@/components/Greeting.svelte";
import { HeaderColor } from "@/components/HeaderColor";
---

<Layout>
    <div id="playlist-container" class="relative transition-all duration-1000">
        <HeaderColor client:load />
        <!-- PageHeader -->

        <div class="relative z-10 px-6 pt-10">
            <Greeting />

            <div
                class="grid grid-cols-[repeat(auto-fit_,minmax(250px,_1fr))] mt-6 gap-2"
            >
                {
                    playlists.map((item) => (
                        <PlayListHorizontalCard playlist={item} />
                    ))
                }
            </div>

            <section class="mt-6">
                <h2 class="text-2xl font-bold mb-4">Escuchado recientemente</h2>
                <div class="grid grid-cols-2 sm:flex sm:flex-wrap gap-4">
                    {
                        playlists.map((playlists) => (
                            <PlayListItemCard playlist={playlists} />
                        ))
                    }
                </div>
            </section>
        </div>

        <div
            class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900"
        >
        </div>
    </div>
</Layout>
