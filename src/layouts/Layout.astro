---
import AsideMenu from "../components/AsideMenu.astro";
import { ClientRouter } from "astro:transitions";
import { Player } from "@/components/Player";
import FooterMenu from "@/components/FooterMenu.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Spotify Clone</title>
        <ClientRouter fallback="none" />
    </head>
    <body>
        <div id="app" class="relative h-screen sm:p-2 sm:gap-2">
            <aside class="[grid-area:aside] flex-col flex overflow-y-auto">
                <AsideMenu />
            </aside>
            <main
                class="[grid-area:main] sm:rounded-lg bg-zinc-900 overflow-x-auto"
            >
                <slot />
            </main>
            <footer class="[grid-area:player] sm:h-[80px] flex items-center">
                <Player
                    client:load
                    transition:name="media-player"
                    transition:persist
                />
                <FooterMenu />
                <!--  -->
            </footer>
        </div>
    </body>
</html>

<style>
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }

    #app {
        display: grid;
        grid-template-areas:
            "aside main main"
            "player player player";
        grid-template-columns: 300px 1fr;
        grid-template-rows: 1fr auto;
    }

    @media (max-width: 640px) {
        #app {
            display: grid;
            grid-template-areas:
                "main"
                "player";
            grid-template-columns: 1fr;
            /* grid-template-rows: 1fr; */
        }
    }
</style>

<style is:global>
    html {
        font-family:
            "CircularStd",
            system-ui,
            -sans-serif;
        background: #010101;
        color: white;
    }

    .swiper-button-prev,
    .swiper-button-next {
        color: white; /* Cambia el color de las flechas */
        background-color: rgba(0, 0, 0, 0.5); /* Fondo semitransparente */
        border-radius: 50%; /* Botones redondos */
        /* width: 50px; */
        /* height: 50px; */
        padding: 1rem;
    }

    .swiper-button-prev::after,
    .swiper-button-next::after {
        font-size: 10px; /* Tama√±o del icono de la flecha */
        font-weight: bold;
    }

    @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Medium.woff2") format("woff2");
        font-weight: 500;
        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Book.woff2") format("woff2");
        font-weight: 400;
        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Light.woff2") format("woff2");
        font-weight: 300;
        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Bold.woff2") format("woff2");
        font-weight: 700;
        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Black.woff2") format("woff2");
        font-weight: 900;
        font-style: normal;
        font-display: swap;
    }
</style>
